<CustomBubbleButton>:
    on_release:
        app.root.pin.text += self.text

<NumericKeyboard>:
    layout: layout

    size_hint: (None, None)
    size: (320, 240)
    pos_hint: {'x': 0, 'y': 1}

    GridLayout:
        id: layout
        cols: 3

<MyFloat>:
	pin: pin
	msg: pin_msg	

	FloatLayout:
		size: root.width, root.height / 1.5
		
		Label:
			text: "Enter Pin"
			halign: 'center'
			size_hint: 0.5, 0.12
			pos_hint: {"x": 0.25, "y": 1}

		TextInput:
            pos_hint: {"x":0.25, "y": 0.85}
            size_hint: 0.5, 0.085
			halign: 'center'
			valign: 'middle'
            id: pin
			on_focus: root.show_bubble()
			input_type: 'number'
            multiline: False

		Button:
			text: "Submit"
			pos_hint: {"x": 0.5, "y": 0.7}
			size_hint: 0.25, 0.12
			on_release: root.btn()

		Label:
			text: ""
			id: pin_msg
			halign: 'center'
			size_hint: 0.5, 0.12
			pos_hint: {"x": 0.25, "y": 0.55}